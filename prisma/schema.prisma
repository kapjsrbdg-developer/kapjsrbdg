generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ClientForm {
  id                String   @id @default(cuid())
  namaLengkap       String
  nomorHP           String
  email             String
  jumlahEntitas     Int
  jasaYangDibutuhkan String  // JSON string untuk array jasa
  companies         String   // JSON string untuk array companies
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("client_forms")
}
